print_sheet = Style_Sheet \
    ( Media.Rule
        ( Media.Query ("print")
        , rules                   =
            [ Rule
                ( "*"
                , background      = "transparent !important"
                , color           = "black !important"
                , overflow        = "visible !important"
                )
            , Rule
                ( "html", "body", ".pg_main", ".pg_foot", ".pg_head"
                , display         = "block !important"
                , border          = "0 !important"
                , margin          = "0 !important"
                , padding         = "0 !important"
                , width           = "auto !important"
                )
            , Rule
                ( "html"
                , margin          = TRBL (0, Cm (2.5))
                )
            , Rule
                ( "body"
                , font_size       = Pt (10)
                , height          = "auto !important"
                , min_width       = 0
                , width           = "auto !important"
                , ** P.font_spec_print
                )
            , Rule
                ( "em", ".em"
                , ** dict
                    (P.font_spec_print, font_style = "italic")
                )
            , Rule
                ( "strong"
                , ** dict
                    (P.font_spec_print, font_weight = "bold")
                )
            , Rule
                ( "pre"
                , ** dict
                    (P.font_spec_print, font_family = P.font_family_pre)
                )
            , Rule ("thead", display = "table-header-group")
            , Rule
                ( ".pg_body"
                , max_width       = Em (45)
                )
            , Rule
                ( ".pg_foot"
                , bottom          = 0
                , font_size       = Percent (75)
                , left            = 0
                , position        = "fixed !important"
                , width           = Percent (100)
                )
            , Rule
                ( ".pg_head"
                , color           = "#666666 !important"
                , height          = "auto !important"
                )
            , Rule
                ( ".pg_head .logo", ".pg_foot .top-link"
                , "nav", ".main-nav", ".rel-nav", ".short-nav"
                , display         = "none !important"
                , visibility      = "collapse !important"
                )
            , Rule
                ( ".pg_main a"
                , color           = "#000033 !important"
                , text_decoration = "none !important"
                , children        =
                    [ Rule_Attr
                        ( "[href]:after"
                        , content   = """ " [" attr(href) "]" """.strip ()
                        , font_size = "smaller"
                        )
                    , Rule_Class
                        ( "button"
                        , display    = "none !important"
                        , visibility = "collapse !important"
                        )
                    ]
                )
            ]
        )
    , rank  = 1 << 16
    )

### __END__ print
