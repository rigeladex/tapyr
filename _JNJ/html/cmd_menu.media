style_sheet = Style_Sheet \
    ( Rule
        ( ".cmd-menu"
        , border           = P.border_button
        , float            = "right"
        , margin_top       = Em (-0.1)
        , max_height       = Percent (80)
        , max_width        = Percent (80)
        , min_width        = Em (12)
        , overflow_y       = "auto"
        , padding          = 0
        , width            = "auto"
        )
    , Rule
        ( ".cmd-menu.nested"
        , overflow         = "visible"
        , children         =
            [ Rule
                ( "ul"
                , max_width        = Percent (80)
                , min_width        = Em (12)
                )
            ]
        )
    )

### __END__ html/cmd_menu.media
