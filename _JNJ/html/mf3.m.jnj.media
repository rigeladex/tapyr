                                , margin               = TRBL0 (l = Em (0.5))
                                , padding              = Em (0.5)
                                , children             =
                                    [ Rule
                                        ( "i.fa"
                                        , color                = P.color.m_blue
                                        )
                                    ]
                                )
                            , Rule_Child
                                ( ".Expl"
                                , display              = "none"
                                , margin               = TRBL0 (t = Em (0.5))
                                , children             =
                                    [ Rule
                                        ( "p"
                                        , margin       = TRBL0 (t = Em (0.5))
                                        )
                                    ]
                                )
                            , Rule_Class
                                ( "open"
                                , display              = "block"
                                )
                            , Rule
                                ( ".error-msg"
                                , background_color = P.color_status_bad
                                , border           =
                                    "1px solid " + P.color_status_bad
                                , border_radius    = Em (1/2)
                                , color            = P.text_color
                                , font_weight      = 600
                                , margin           = TRBL (Rem (0.5), 0)
                                , padding          = TRBL (Rem (0.5))
                                )
                            ]
                        )
                    ]
                )
            , Rule
                ( ".Field"
                , children         =
                    [ Rule_Class
                        ( "Confirmation"
                        , children             =
                            [ Rule_Child
                                ( "aside"
                                , display              = "block"
                                )
                            ]
                        )
                    , Rule_Class
                        ( "mf3-control-group-h"
                        , display              = "inline-block"
                        , vertical_align       = "top"
                        , children             =
                            [ Rule
                                ( "label"
                                , display          = "block"
                                , margin           = TRBL0 (l = Em (0.5))
                                , text_align       = "left"
                                , vertical_align   = "top"
                                , width            = "auto"
                                )
                            , Rule
                                ( "input"
                                , display          = "block"
                                , vertical_align   = "top"
                                )
                            ]
                        )
                    , Rule
                        ( "input"
                        , children             =
                            [ Rule_Attr
                                ( "[type=checkbox]"
                                , vertical_align       = "text-top"
                                )
                            ]
                        )
                    , Rule
                        ( "input", "textarea"
                        , children             =
                            [ Rule_Class
                                ( "display.value"
                                , background_color     = "inherit"
                                , border_color         = "inherit"
                                , color                = "inherit"
                                , children             =
                                    [ P.Rule.input_focus
                                    ]
                                )
                            , Rule_Class
                                ( "hidden.value"
                                , display              = "none"
                                )
                            ]
                        )
                    , Rule
                        ( "textarea"
                        , height       = Em (10.0)
                        )
                    ]
                )
            , Rule
                ( ".form-errors"
                , background_color = P.color_status_bad
                , border           = "1px solid " + P.background_color
                , border_radius    = Em (1/2)
                , margin           = TRBL (0, 0, Em (1.0))
                , padding          = TRBL (Rem (0.5), Rem (1.1), 0)
                , children         =
                    [ Rule
                        ( ".error-msg"
                        , border           = "1px solid #DEDEDE"
                        , border_radius    = Em (1/2)
                        , padding          = TRBL (Rem (0.5), Rem (0.5), 0)
                        , margin           = TRBL (0, 0, Rem (1.0))
                        , children         =
                            [ Rule
                                ( "a.pure-button"
                                , color     = P.color.m_blue
                                , min_width = Rem  (2.0)
                                , padding   =
                                    TRBL (Rem (0.25), Rem (0.5), Rem (0.125))
                                )
                            ]
                        )
                    , Rule
                        ( "h1", "h2", "p"
                        , margin           = TRBL (0, 0, Rem (0.5))
                        , padding          = 0
                        )
                    , Rule
                        ( "h1", "h2"
                        , background_color = "inherit"
                        , color            = "inherit"
                        )
                    , Rule
                        ( "h1"
                        , font_size        = Em (1.5)
                        , font_weight      = "bold"
                        )
                    , Rule
                        ( "h2"
                        , font_size        = Em (1.25)
                        , font_weight      = "normal"
                        )
                    ]
                )
            , Rule
                ( ".Status"
                , Border (radius = Percent (50))
                , display           = "inline-block"
                , float             = "left"
                , height            = P.afs.status_size
                , margin_left       = P.afs.status_size / 2
                , margin_right      = P.afs.status_size
                , margin_top        = P.afs.status_size / 4
                , width             = P.afs.status_size
                , children          =
                    [ Rule_Class
                        ( "good"
                        , background_color  = "transparent"# P.color_status_good
                        )
                    , Rule_Class
                        ( "missing"
                        , background_color  = "transparent"# P.color_status_missing
                        )
                    , Rule_Class
                        ( "bad"
                        , background_color  = "transparent"# P.color_status_bad
                        )
                    ]
                )
            ]
        )
    , Rule
        ( ".no-js"
        , children           =
            [ Rule
                ( "form"
                , opacity            = 0.625
                , children           =
                    [ Rule
                        ( "input", "label", "select", "textarea"
                        , pointer_events     = "none"
                        )
                    ]
                )
            , Rule
                ( "noscript h1"
                , color          = P.color_status_bad
                )
            ]
        )
    , Media.Rule
        ( Media.Query ("screen", max_width = Rem (34))
        , rules               =
            [ Rule
                ( "form"
                , children        =
                    [ Rule
                        ( "section", "div"
                        , children         =
                            [ Rule_Class
                                ( "Field"
                                , children             =
                                    [ Rule_Class
                                        ( ".mf3-control-group-h"
                                        , display              = "block"
                                        )
                                    ]
                                )
                            , Rule_Class
                                ( "Field-Composite.horizontal"
                                , children             =
                                    [ Rule_Child
                                        ( "label"
                                        , padding_top          = 0
                                        )
                                    ]
                                )
                            ]
                        )
                    ]
                )
            ]
        )
    , Media.Rule
        ( Media.Query ("screen", P.breakpoint.quite_narrow)
        , rules               =
            [ Rule
                ( "body:after"
                , font_size           = Px (1)
                )
            , Rule
                ( ".pure-form"
                , children        =
                    [ Rule
                        ( ".action-button"
                        , font_size        = Em (1.125)
                        )
                    , Rule
                        ( "section", "div"
                        , children         =
                            [ Rule_Class
                                ( "Entity"
                                , children             =
                                    [ Rule_Child
                                        ( "h1"
                                        , margin           = TRBL (Em (0.5), 0)
                                        , padding          = 0
                                        )
                                    ]
                                )
                            , Rule_Class
                                ( "Field", "Field-Composite"
                                , children             =
                                    [ Rule
                                        ( "label"
                                        , max_width            = Percent (95)
                                        , padding              = TRBL
                                            (Em (0.5), 0, 0)
                                        , position             = "relative"
                                        , children             =
                                            [ Rule_Class
                                                ( "desc-p"
                                                , cursor           = "help"
                                                , children         =
                                                    [ P.Rule.hover
                                                    , Rule_Pseudo
                                                        ( "after"
                                                        , bottom      = Rem (0.05)
                                                        , color       =
                                                            P.color.m_blue
                                                        , content     = "'?'"
                                                        , font_size   = Rem (1.0)
                                                        , font_weight = "bold"
                                                        , position    = "absolute"
                                                        , right       = Rem (1.0)
                                                        )
                                                    ]
                                                )
                                            ]
                                        )
                                    ]
                                )
                            , Rule_Class
                                ( "Field", "Field-Entity", "Field-Composite"
                                , "Field-Composite.horizontal"
                                , padding_left         = Rem (0.5)
                                , children             =
                                    [ Rule
                                        ( "aside"
                                        , display              = "none"
                                        , margin_left          = 0
                                        , children             =
                                            [ Rule_Class
                                                ( "open"
                                                , display      = "block"
                                                )
                                            ]
                                        )
                                    ]
                                )
                            , Rule_Class
                                ( "Field-Entity", "Field-Composite"
                                , margin               = TRBL (Rem (1.0))
                                )
                            , Rule_Sibling
                                ( "section", "div"
                                , children             =
                                    [ Rule_Class
                                        ( "Field-Entity"
                                        , margin_top           = Rem (1.5)
                                        )
                                    , Rule_Class
                                        ( "Field-Composite"
                                        , margin_top           = Rem (0.5)
                                        )
                                    ]
                                )
                            ]
                        )
                    ]
                )
            ]
        )
    )

Script  (CHJ.Script._.GTW_autocomplete)
Script  (CHJ.Script._.GTW_hd_input)
Script  (CHJ.Script._.GTW_jq_mf3)

