CSS_Link (CHJ.CSS_Link._.jQuery_UI)

Include ("html/autocomplete.media")
Include ("html/ui_dialog.media")

style_sheet = Style_Sheet \
    ( Rule
        ( "body:after"
        , content              = "''"
        , font_size            = 0
        )
    , Rule
        ( "form"
        , font_size            = Em (0.875)
        , children             =
            [ Rule
                ( "h6"
                , font_size    = Rem (1.0)
                , margin       = TRBL (0, Em (1.0))
                )
            , Rule
                ( ".action-button"
                , background_color = P.background_color
                , border           = 0
                , display          = "inline-block"
                , font_size        = Em (0.875)
                , font_weight      = "normal"
                , width            = "auto"
                , children         =
                    [ Rule
                        ( ".fa"
                        , color        = P.color.m_blue
                        , height       = Em (1.0)
                        , width        = Em (1.0)
                        )
                    , Rule
                        ( ".pure-button"
                        , display      = "inline-block"
                        , padding      = Em (0.5)
                        , margin       = TRBL (Em (0.25), 0)
                        )
                    ]
                )
            , Rule
                ( ".pure-button"
                , border_radius     = Em (1/4)
                )
            , Rule_Class
                ( "pure-form"
                , children     =
                    [ Rule
                        ( "input", "select", "textarea"
                        , line_height          = P.line_height_input
                        , children             =
                            [ Rule_Class
                                ( "bad"
                                , background_color  = P.color_status_bad
                                , children          =
                                    [ Rule_Pseudo
                                        ( "focus"
                                        , background_color  = P.color_status_bad
                                        , border_width      = Px (2)
                                        )
                                    ]
                                )
                            , Rule_Class
                                ( "invalid"
                                , border_color = P.color_status_bad
                                , border_width = Px (2)
                                )
                            , Rule_Pseudo
                                ( "invalid"
                                , border_color = P.color_status_bad
                                )
                            , Rule_Pseudo
                                ( """invalid[value=""]"""
                                , border_color = P.color_status_missing
                                , children     =
                                    [ Rule_Pseudo
                                        ( "focus"
                                        , P.Rule.input_focus
                                        , outline = "3px solid "
                                                  + P.color_status_missing
                                        )
                                    ]
                                )
                            , P.Rule.input_focus
                            ]
                        )
                    , Rule
                        ( "label > b"
                        , color            = P.color_status_bad
                        , font_size        = Em (1.25)
                        , margin_left      = Em (0.25)
                        , position         = "absolute"
                        , children          =
                            [ Rule_Class
                                ( "good"
                                , color  = P.color_status_good
                                )
                            , Rule_Class
                                ( "missing"
                                , color  = P.color_status_bad
                                )
                            , Rule_Class
                                ( "bad"
                                , color  = P.color_status_bad
                                )
                            ]
                        )
                    ]
                )
            , Rule
                ( "div", "section"
                , position         = "relative"
                , children         =
                    [ Rule_Class
                        ( "Entity"
                        , children         =
                            [ Rule_Child
                                ( "h1"
