                                , font_size        = Em (1.5)
                                , font_weight      = "bold"
                                , padding          = TRBL
                                    (0,  Em (1.1), Em (0.5))
                                )
                            ]
                        )
                    , Rule_Class
                        ( "Entity-List", "Field-Entity", "Field-Composite"
