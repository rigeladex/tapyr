                                ( "h1"
                                , background_color = P.background_color
                                , border           = 0
                                , display          = "inline-block"
                                , font_size        = "inherit"
                                , font_weight      = "normal"
                                , left             = Em (2)
                                , margin_top       = Em (-0.6)
                                , padding          = TRBL (0,  Em (1.1))
                                , position         = "absolute"
                                , top              = 0
                                , width            = "auto"
                                )
                            , Rule_Child
                                ( ".Display.Field"
                                , display              = "none"
                                , visibility           = "hidden"
                                )
                            , Rule_Child
                                ( "fieldset"
                                , display              = "block"
                                , visibility           = "visible"
                                )
                            ]
                        )
                    , Rule_Class
                        ( "Field-Entity", "Field-Composite"
                        , margin           = TRBL (0, Em (1.0), Em (0.5))
                        )
                    , Rule_Sibling
                        ( "section", "div"
                        , children             =
                            [ Rule_Class
                                ( "Field-Entity", "Field-Composite"
                                , margin_top           = Rem (1.5)
                                )
                            ]
                        )
                    , Rule_Class
                        ( "Field-Composite.horizontal"
                        , border           = 0
                        , margin           = TRBL0 (b = Em (0.5))
                        , children             =
                            [ Rule
                                ( "div"
                                , margin_bottom    = 0
                                )
                            , Rule_Child
                                ( "label"
                                , padding_top      = Em (2.0)
                                , vertical_align   = "top"
                                )
                            , Rule_Child
                                ( ".Fields"
                                , display          = "inline-block"
                                , margin           = 0
                                , vertical_align   = "top"
                                , children         =
                                    [ Rule
                                        ( "aside"
                                        , padding_left     = Em (0.2)
                                        , margin_left      = 0
                                        )
                                    ]
                                )
                            ]
                        )
                    , Rule_Class
                        ( "Field-Entity"
                        , children         =
                            [ Rule_Child
                                ( ".action-button"
                                , bottom           = 0
                                , margin_bottom    = Em (-1.3)
                                , padding          = TRBL (0, Em (0.5))
                                , position         = "absolute"
                                , right            = Em (1)
                                , visibility       = "visible"
                                )
                            , Rule_Class
                                ( "removed"
                                , children         =
                                    [ Rule_Child
                                        ( "div.action-button"
                                        , "div.Display.Field"
                                        , "fieldset"
                                        , display              = "none"
                                        , visibility           = "hidden"
                                        )
                                    , Rule_Child
                                        ( ".feedback"
                                        , display              = "block"
                                        , margin               = TRBL
                                            (0, Em (1.0))
                                        , max_width            = Percent (100)
                                        , visibility           = "visible"
                                        , children             =
                                            [ Rule
                                                ( "a[data-action]"
                                                , display          = "block"
                                                , float            = "left"
                                                , height           = Em (1.5)
                                                , margin_right     = Em (0.5)
                                                , padding          = TRBL
                                                    ( Em (0.675)
                                                    , Em (0.5)
                                                    , Em (0.25)
                                                    )
                                                , vertical_align   = "middle"
                                                , width            = Em (1.5)
                                                )
                                            , Rule
                                                ( "b"
                                                , background_color =
                                                    P.color_status_good
                                                , display          = "block"
                                                , padding          = TRBL (Em (0.5))
                                                , vertical_align   = "middle"
                                                )
                                            , Rule
                                                ( ".fa"
                                                , color            =
                                                    P.color.m_orange
                                                , font_size        = Em (1.25)
                                                , height           = Em (1.0)
                                                , width            = Em (1.0)
                                                )
                                            ]
                                        )
                                    ]
                                )
                            , Rule_Sibling
                                ( ".Field"
                                , margin_top       = Em (1.5)
                                )
                            ]
                        )
                    , Rule_Class
                        ( "Fields"
                        , children         =
                            [ Rule
                                ( ".Field"
                                , margin_top   = 0
                                )
                            ]
                        )
                    , Rule_Class
                        ( "Entity-List"
                        , margin           =
                            TRBL (Rem (1.0), Rem (0.5), Rem (2.0), 0)
                        , padding_bottom   = Em (1.0)
                        , children         =
                            [ Rule_Child
                                ( "h1"
                                , font_weight      = "bold"
                                )
                            , Rule_Child
                                ( ".action-button"
                                , bottom           = 0
                                , left             = Em (2)
                                , margin_bottom    = Em (-1.3)
                                , padding          = TRBL (0,  Em (1.1))
                                , position         = "absolute"
                                , width            = "auto"
                                )
                            , Rule_Child
                                ( ".Field-Entity"
                                , margin_bottom    = Em (0.5)
                                , margin_top       = Em (0.5)
                                , children         =
                                    [ Rule_Sibling
                                        ( ".Field-Entity"
                                        , margin_top   = Em (1.5)
                                        )
                                    ]
                                )
                            ]
                        )
                    , Rule_Class
                        ( "Field-Entity.closed"
                        , children         =
                            [ Rule_Child
                                ( ".action-button .pure-button"
                                , display              = "none"
                                , visibility           = "hidden"
                                )
                            , Rule_Child
                                ( ".action-button [data-action=remove]"
                                , display              = "block"
                                , visibility           = "visible"
                                )
                            , Rule_Child
                                ( ".Display.Field"
                                , display              = "block"
                                , visibility           = "visible"
                                )
                            , Rule_Child
                                ( "fieldset"
                                , display              = "none"
                                , visibility           = "hidden"
                                )
                            , Rule_Sibling
                                ( ".Field"
                                , margin_top           = 0
                                )
                            ]
                        )
                    ]
                )
            , Rule
                ( ".Field", ".Field-Composite"
                , children         =
                    [ Rule_Child
                        ( "aside"
                        , color                = P.color_half_grey
                        , margin               = TRBL0
                            ( b                = Em (0.5)
                            , l                = P.pure.aside_indent
                            )
                        , padding_left         = Em (0.5)
                        , children             =
                            [ Rule_Child
                                ( ".button[data-action=more_aside]"
