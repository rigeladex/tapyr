style_sheet = Style_Sheet \
    ( Rule
        ( ".sitemap"
        , children =
            [ Rule
                ( "ul"
                , list_style      = "none"
                , margin          = 0
                , padding         = 0
                )
            , Rule ("li a",                         display      = "block")
            , Rule ("li li a",                      padding_left = Em ( 2.50))
            , Rule ("li li li a",                   padding_left = Em ( 5.00))
            , Rule ("li li li li a",                padding_left = Em ( 7.50))
            , Rule ("li li li li li a",             padding_left = Em (10.00))
            , Rule ("li li li li li li a",          padding_left = Em (12.50))
            , Rule ("li li li li li li li a",       padding_left = Em (15.00))
            , Rule ("li li li li li li li li a",    padding_left = Em (17.50))
            , Rule ("li li li li li li li li li a", padding_left = Em (20.00))
            ]
        )
    )

### __END__ html/sitemap.jnj.css
