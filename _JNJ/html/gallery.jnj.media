from   __future__  import absolute_import
from   __future__  import division
from   __future__  import print_function
from   __future__  import unicode_literals

style_sheet = Style_Sheet \
    ( Rule
        ( ".gallery"
        , width                    = Percent (100)
        , children                 =
            [ Rule
                ( "h1", "h2"
                , margin_bottom    = Px (10)
                , padding          = TRBL (Px (10), 0)
                , text_align       = "center"
                , ** P.color_spec_gallery_heading
                )
            , Rule
                ( ".inline"
                , display          = "none"
                , children         =
                    [ Rule
                        ( "img"
                        , display          = "block"
                        , margin           = "auto"
                        )
                    , Rule
                        ( ".photo"
                        , cursor           = "pointer"
                        , margin           = "auto"
                        , max_width        = Percent (100)
                        )
                    , Rule
                        ( ".photo-nav"
                        , Display          ("flex")
                        , Flex             ("row wrap")
                        , border           = 0
                        , margin           = TRBL (Em (0.5), "auto")
                        , padding          = 0
                        , width            = Percent (100)
                        , text_align       = "center"
                        , children         =
                            [ Rule
                                ( "button"
                                , Flex             ("0 0 auto")
                                , background_color = "inherit"
                                , display          = "inline-block"
                                , font_size        = Em (1.5)
                                , padding          = Em (0.5)
                                , margin           = TRBL (0, Em (0.25))
                                , min_width        = 0
                                , children         =
                                    [ P.Rule.hover
                                    , Rule
                                        ( "i.fa"
                                        , color            = P.color.m_orange
                                        )
                                    , Rule_Class
                                        ( ".first"
                                        , margin_right     = "auto"
                                        )
                                    , Rule_Class
                                        ( ".last"
                                        , margin_left      = "auto"
                                        )
                                    ]
                                )
                            ]
                        )
                    ]
                )
            ]
        )
    , Rule
        ( ".thumbnails"
        , font_style                 = "italic"
        , children                   =
            [ Rule_Class
                ( "inline"
                , display            = "block"
                , overflow           = "auto"
                , position           = "relative"
                )
            , Rule
                ( "a"
                , display            = "inline-block"
                , height             = P.thumbnail_size
                , text_align         = "center"
                , width              = P.thumbnail_size
                )
            , Rule
                ( "img"
                , border             =
                    "3px solid " + P.color_spec_normal ["background_color"]
                , vertical_align     = "middle"
                , children           =
                    [ Rule_Class
                        ( "selected"
                        , border_color = P.thumbnail_selected_color
                        )
                    ]
                )
            , Rule
                ( ".list"
                , display            = "block"
                , list_style         = "none"
                , margin             = 0
                , padding            = 0
                , children           =
                    [ Rule
                        ( "li"
                        , display            = "inline-block"
                        , margin             = 0
                        , padding            = 0
                        )
                    ]
                )
            ]
        )
    , Rule
        ( ".js .gallery .inline"
        , display            = "block"
        )
    )

Script      (CHJ.Script._.V5a_gallery)
JS_On_Ready (CHJ.JS_On_Ready._.V5a_gallery)

### __END__ html/gallery.jnj.media
